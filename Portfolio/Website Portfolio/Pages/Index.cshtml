        <section class="interests section" id="interests">
            <span class="section-subtitle">Hobbies</span>
            <h2 class="section-title">Interests</h2>

            <div class="interests__container">

                <div class="int__btn__container">
                    <button class="int__btn"><i class="bx bx-world interests__icon"></i>Sports</button>
                    <button class="int__btn"><i class="bx bx-line-chart interests__icon"></i>Investing</button>
                    <button class="int__btn"><i class="bx bx-bulb interests__icon"></i>Learning</button>
                    <button class="int__btn"><i class="bx bx-dish interests__icon"></i>Cooking</button>
