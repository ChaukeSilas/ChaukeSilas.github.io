    <!-- CSS -->
    <link rel="stylesheet" href="/css/styles.css">
    <!-- SWIPER CSS -->
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.css" />
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
    <!-- ICONS -->
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>

    <title>Portfolio | Silas Chauke</title>

</head>

<body>
    <!-- HEADER -->
    <header class="l-header">
        <nav class="nav grid">
            <div class="nav__toogle" id="nav-toggle">
                <i class='bx bx-menu'></i>
            </div>

            <div>
                <a href="#" class="nav__logo">Silas Chauke</a>
            </div>

            <div class="nav__menu" id="nav-menu">
                <div class="nav__close" id="nav-close">
                    <i class='bx bx-x'></i>
                </div>

                <ul class="nav__list">
                    <li class="nav__item"><a href="#home" class="nav__link active">Home</a></li>
                    <li class="nav__item"><a href="#about" class="nav__link">About</a></li>
                    <li class="nav__item"><a href="#skills" class="nav__link">Skills</a></li>
                    <li class="nav__item"><a href="#experience" class="nav__link">Experience</a></li>
                    <li class="nav__item"><a href="#education" class="nav__link">Education</a></li>
                    <li class="nav__item"><a href="#interests" class="nav__link">Interests</a></li>
                </ul>
            </div>
        </nav>
    </header>

    <main class="l-main">
        <!-- HOME -->
        <section class="home" id="home">
            <div class="home__container grid">
                <div class="home__data">
                    <div class="home__img">
                        <img src="/images/Silas Chauke.jpg" alt="">
                    </div>

                    <h1 class="home__title">Silas Chauke</h1>
                    <span class="home__profession">Software Developer</span>

                    <div class="home__social">
                        <a href="https://www.linkedin.com/in/silas-chauke" class="home__social-link"><i class='bx bxl-linkedin'></i></a>
                        <a href="#" class="home__social-link"><i class='bx bxl-github'></i></a>
                        <a href="#" class="home__social-link"><i class='bx bxl-facebook'></i></a>
                        <a href="#" class="home__social-link"><i class='bx bxl-instagram'></i></a>
                    </div>

                    <a download="" href="/images/Silas Chauke - RESUME.pdf" class="button home__button">Download Resume</a>

                </div>
            </div>
        </section>

        <!-- ABOUT -->
        <section class="about section" id="about">
            <span class="section-subtitle">Intro</span>
            <h2 class="section-title">About Me</h2>

            <div class="about__container grid">
                <div class="about_inf_wrapper">
                    <div class="about__information">
                        <h3 class="about__information-title">Information</h3>

                        <div class="about__information-data">
                            <i class='bx bx-user about__information-icon'></i>
                            <span>Silas Chauke</span>
                        </div>

                        <div class="about__information-data">
                            <i class='bx bx-phone about__information-icon'></i>
                            <span>+27 76 820 2752</span>
                        </div>

                        <div class="about__information-data">
                            <i class='bx bx-envelope about__information-icon'></i>
                            <span>chaukest02@gmail.com</span>
                        </div>

                        <div class="about__information-data">
                            <i class='bx bx-map about__information-icon'></i>
                            <span>Centurion, Pretoria</span>
                        </div>
                    </div>

                    <div class="about__information">
                        <h3 class="about__information-title">Experience</h3>

                        <div class="about__information-data">
                            <i class='bx bx-medal about__information-icon'></i>
                            <div>
                                <span class="about__information-subtitle">1 Year</span>
                                <span class="about__information-subtitle-small">Job Experience</span>
                            </div>
                        </div>

                        <div class="about__information-data">
                            <i class='bx bx-briefcase about__information-icon'></i>
                            <div>
                                <span class="about__information-subtitle">Skills</span>
                                <span class="about__information-subtitle-small">Programming</span>
                            </div>
                        </div>

                        <div class="about__information-data">
                            <i class='bx bx-support about__information-icon'></i>
                            <div>
                                <span class="about__information-subtitle">Support</span>
                                <span class="about__information-subtitle-small">On-site</span>
                            </div>
                        </div>
                    </div>

                    <div class="about__information">
                        <h3 class="about__information-title">Languages</h3>
                        <div class="about__information-data">
                            <i class='bx bx-message-rounded about__information-icon'></i>
                            <div>
                                <span class="about__information-subtitle">Tsonga</span>
                                <span class="about__information-subtitle-small">Mother Tongue</span>
                            </div>
                        </div>

                        <div class="about__information-data">
                            <i class='bx bx-message about__information-icon'></i>
                            <div>
                                <span class="about__information-subtitle">English</span>
                                <span class="about__information-subtitle-small">Proficient</span>
                            </div>
                        </div>

                        <div class="about__information-data">
                            <i class='bx bx-chat about__information-icon'></i>
                            <div>
                                <span class="about__information-subtitle">Sepedi</span>
                                <span class="about__information-subtitle-small">Basic</span>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </section>

        <!-- SKILLS -->
        <section class="skills section" id="skills">
            <span class="section-subtitle">Expertise</span>
            <h2 class="section-title">Skills</h2>

            <div class="skills__container grid">
                <div class="skills__content">
                    <i class='bx bx-code skills__icon'></i>
                    <h3 class="skills__title">Frontend</h3>
                    <p class="skills__description">HTML, Javascript, CSS & Bootstrap</p>
                </div>

                <div class="skills__content">
                    <i class='bx bx-code-curly skills__icon'></i>
                    <h3 class="skills__title">Backend</h3>
                    <p class="skills__description">SQL (MS SQL Sever), Python</p>
                </div>

            </div>
        </section>

        <!-- EXPERIENCE -->
        <section class="experience section" id="experience">
            <span class="section-subtitle">Experience</span>
            <h2 class="section-title">Work Experience</h2>

            <div class="experience__container grid">

                <div class="experience__content">
                    <h3 class="experience__date">02/2021 - Present</h3>
                    <h3 class="experience__title">Junior Software Developer</h3>
                    <h3 class="experience__company">Crown Software</h3>
                    <p class="experience__description">
                        Building Software and web applications, Testing software using intergration testing,
                        re-building Software and debugging
                    </p>
                    <div class="accordion__container">
                        <button class="accordion">Tools in daily use</button>
                        <div class="accordion__content">
                            <p class="accordion__text">Visual Studio - SQL (Oracle SQL Developer) - PostMan</p>
                        </div>

                        <button class="accordion">Additional knowledge</button>
                        <div class="accordion__content">
                            <p class="accordion__text">Git - XML - JSON - REST API </p>
                        </div>
                    </div>
                </div>

                <div class="experience__content">
                    <h3 class="experience__date">02/2020 - Present</h3>
                    <h3 class="experience__title">Tutor & Student Work</h3>
                    <h3 class="experience__company">Belgium Campus</h3>
                    <p class="experience__description"> Tutor for Web Programming, Mathematics A | B, Computing & Database SQL</p>
                </div>

            </div>
        </section>

        <!-- EDUCATION -->
        <section class="education section" id="education">
            <span class="section-subtitle">Qualification</span>
            <h2 class="section-title">Education</h2>

            <div class="education__container grid">

                <div class="education__content">
                    <div>
                        <h3 class="education__year">2019 - 2021</h3>
                        <span class="education__university">College</span>
                    </div>

                    <div class="education__time">
                        <span class="education__rounder"></span>
                        <span class="education__line"></span>
                    </div>

                    <div>
                        <h3 class="education__title">IT Software Development</h3>
                        <span class="education__specialty">Belgium Campus ITVarsity</span>
                    </div>
                </div>

                <div class="education__content">
                    <div>
                        <h3 class="education__year">2014 - 2018</h3>
                        <span class="education__university">High School</span>
                    </div>

                    <div class="education__time">
                        <span class="education__rounder"></span>
                        <span class="education__line"></span>
                    </div>

                    <div>
                        <h3 class="education__title">High School Graduate</h3>
                        <span class="education__specialty">Diepsloot Combined School</span>
